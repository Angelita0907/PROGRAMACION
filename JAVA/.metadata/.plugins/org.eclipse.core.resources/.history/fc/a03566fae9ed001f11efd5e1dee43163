package entornos;

import java.util.Scanner;
import java.util.Random;

public class PiedraPapelTijera {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Random r = new Random();
		PiedraPapelTijera f = new PiedraPapelTijera();

		int apuestaMaquina = r.nextInt(2);

		System.out.println("Indica apuesta: ");
		String apuestaHumano = sc.next().toUpperCase();

		while(apuestaHumano!= "0")
		{
			System.out.println("El usuario elige: "+apuestaHumano);
			System.out.println("El usuario elige: "+apuestaMaquina);

			switch (apuestaHumano)
			{
			
			case "PIEDRA":
				if (f.apuestaMaquina(apuestaMaquina) == "PIEDRA") {
					System.out.println("Empate");}
				else if (f.apuestaMaquina(apuestaMaquina)  == "PAPEL"){
					System.out.println("Usuario gana");}
	            else {
	            	System.out.println("Usuario pierde");}
	        case "PAPEL":
	            if (f.apuestaMaquina(apuestaMaquina)  == "PIEDRA") {
	            	System.out.println("Usuario gana");}
	            else if (f.apuestaMaquina(apuestaMaquina)  == "TIJERA") {
	            	System.out.println("Usuario pierde");}
	            else {
	            	System.out.println("Empate");}
	        case "TIJERA":
	            if (f.apuestaMaquina(apuestaMaquina)  == "PIEDRA") {
	            	System.out.println("Usuario pierde");}
	                else if (f.apuestaMaquina(apuestaMaquina)  == "PAPEL") {
	                	System.out.println("Usuario gana");}
	            else {
	            	System.out.println("Empate");}
			}
			
		}
		
	}

	String apuestaMaquina(int apuestaMaquina) {

		String apuesta;
		if (apuestaMaquina == 0) {
			apuesta = "PIEDRA";
		} else if (apuestaMaquina == 1) {
			apuesta = "PAPEL";
		} else {
			apuesta = "TIJERA";
		}
		return apuesta;
	}


}
